<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="account_invoice_inherit_form1">
      <field name="name">account.invoice.form.inherit1</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form//group[1]" position="after">
          <group name="subscription_group">
            <group>
              <field name="subscription"/>
            </group>
            <group>
              <field name="date_from" attrs="{'invisible': [('subscription', '=', False)], 'required': [('subscription', '=', True)]}"/>
              <field name="date_to" attrs="{'invisible': [('subscription', '=', False)], 'required': [('subscription', '=', True)]}"/>
            </group>
          </group>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="account_invoice_inherit_search_filter1">
      <field name="name">account.invoice.form.inherit.search.filter1</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.view_account_invoice_filter"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='late']" position="after">
          <separator/>
          <filter name="expiry" string="Subscription near to Expiry" context="{'filter_subscription_expiry': True}" />
          <filter string="Subscription Start" context="{'group_by':'date_from'}"/>
          <filter string="Subscription End" context="{'group_by':'date_to'}"/>
        </xpath>
      </field>
    </record>
    

